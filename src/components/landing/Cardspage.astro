     /* Style for the card items */
  .card-item {
    @apply bg-gradient-to-br from-blue-500 to-purple-500 rounded-lg shadow-lg overflow-hidden;
    transition: transform 0.3s ease-in-out;
  }

  .card-item:hover {
    @apply transform scale-105;
  }

  .card-item img {
    @apply w-full h-auto;
  }

  .card-item h3 {
    @apply text-xl font-bold text-white mt-4;
  }

  .card-item p {
    @apply text-gray-200;
  }

  /* Media query for responsiveness */
  @media (min-width: 768px) {
    .card-item {
